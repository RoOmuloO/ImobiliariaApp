<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadClienteForSaleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:text="Nome:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtCadClienteNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:text="Telefone: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtCadClienteTelefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:text="E-mail: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtCadClienteEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:text="Quantidade de Parcelas: "
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerCadCliFinQtdeParcelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Financiamento"
                android:textAlignment="center"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:text="Valor do Imóvel: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtViewCadCliFinValorImovel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:text="Valor de Entrada: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtCadClienteValorEntrada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:text="Taxa de Juros (%): "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerCadCliFinTaxaJuros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCadClienteFinVerificaTaxaJuros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calcular Valor Financiado" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:text="Valor Financiado: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtViewCadCliFinValorFinanciado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCadClienteFinSimularFinanciamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simular Financiamento" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:text="Valor Total do Imovel: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtViewCadCliFinValorTotalFinanciado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCadClienteFinConfirmarVenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar Venda" />

            <Button
                android:id="@+id/btnCadCliFinVoltarTelaAnterior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voltar à Tela Anterior" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>